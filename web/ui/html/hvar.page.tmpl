{{template "main" .}}
{{define "title"}}Var of Hosts{{end}}
{{define "content"}}

<div class="content-wrapper">  
  
  <div class="dashboard-header d-flex flex-column">
    <div class="d-flex align-items-center justify-content-between flex-wrap border-bottom pb-3 mb-3">
      
      <div class="d-flex align-items-center">
        <h3 class="mb-0 font-weight-bold">
          <a href="/hosts/vars"><i class="mdi mdi-keyboard-backspace text-primary icon-sm"></i></a> var: {{.InventoryHVar.Name}}:{{.InventoryHVar.Value}}
        </h3>
        <div class="d-none d-md-flex" style="padding: 5px 0px 0px 20px;">
          <a class="text-muted mb-0 tx-13 cursor-pointer" href="/">Overviwew</a>
          <i class="mdi mdi-chevron-right text-muted"></i>
          <a class="text-muted mb-0 tx-13 cursor-pointer" href="/hosts/vars">Vars of Hosts</a>
        </div>
      </div>

      <div class="button-wrapper d-flex align-items-center mt-md-3 mt-xl-0">
        {{$role := .AuthenticatedUser.UserRole}}
        {{if or (eq $role "1") (eq $role "2") (eq $role "3")}}
        <form class=""action="/hosts/var/delete/{{.InventoryHVar.ID}}" method="POST">
          <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
          <button type="submit" class="btn btn-outline-danger btn-sm icon-btn ml-2 mb-2"><i class="mdi mdi-trash-can-outline icon-sm"></i> Delete var</button>
        </form>
        {{else}}
        <span class="btn btn-outline-light btn-sm icon-btn ml-2 mb-2"><i class="mdi mdi-trash-can-outline icon-sm"></i> Delete var</span>
        {{end}}
      </div>

    </div>
  </div>

  <div class="row">

    <div class="col-12 grid-margin">
      {{with .Notice}}
        <div class="alert alert-success notice" role="alert">{{.}}</div>
      {{end}}

      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Edit Var:</h4>
          <form class="form-inline repeater"action="/hosts/var/edit/{{.InventoryHVar.ID}}" method="POST">
          <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
            <div data-repeater-list="group-a">
              <div data-repeater-item="" class="d-flex mb-2">
                <div class="input-group mr-sm-2 mb-sm-0">
                  <input type="hidden" name="idHVar" value="{{.InventoryHVar.ID}}">
                  <input type="text" class="form-control" name="nameHVar" value="{{.InventoryHVar.Name}}" readonly>
                  <span style="font-size: 32px; padding: 0 10px 0 10px; margin-top: -5px;">:</span>
                  <input type="text" class="form-control" name="valueHVar" value="{{.InventoryHVar.Value}}">
                </div>            
                {{if or (eq $role "1") (eq $role "2") (eq $role "3")}}
                <button type="submit" class="btn btn-primary btn-sm" style="margin-bottom: 5px;"><i class="mdi mdi-content-save-edit-outline icon-sm"></i> Save changes</button>
                {{else}}
                <span class="btn btn-light btn-sm" style="margin-bottom: 5px;"><i class="mdi mdi-content-save-edit-outline icon-sm"></i> Save changes</span>
                {{end}}
              </div>
            </div>
          
            {{with .Form.Errors.Get "valueHVar"}}
              <small class="text-danger ml-3 mb-1">{{.}}</small>
            {{end}}
          </form>
        </div>
      </div>

    </div>

    <div class="col-12">
      {{if .InventoryHosts}}
      <div class="alert alert-warning notice" role="alert"><i class="mdi mdi-information-outline"></i>Attention! Var: <strong>{{.InventoryHVar.Name}}:{{.InventoryHVar.Value}}</strong> is contained in the following hosts.</div>
      <div class="card" style="border: 0;">
        <div class="card-body_">
          <div class="table-sorter-wrapper col-lg-12 table-responsive">  
                      
            <table id="sortTable" class="table table-striped table-bordered table-hover" style="width:100%">
              <thead class="thead-light">
                <tr>
                  <th class="sortStyle text-center" style="width: 30px;">Environment <i class="mdi mdi-chevron-down"></i></th>
                  <th class="sortStyle">Hostname<i class="mdi mdi-chevron-down"></i></th>
                  <th class="sortStyle text-center">IP<i class="mdi mdi-chevron-down"></i></th>
                  <th class="sortStyle text-center" style="width: 150px;">Created<i class="mdi mdi-chevron-down"></i></th>
                  <th class="sortStyle text-center" style="width: 150px;">Updated<i class="mdi mdi-chevron-down"></i></th>
                </tr>
              </thead>
              <tbody>
                {{range .InventoryHosts}}
                <tr>
                  <td class="text-center">
                  {{if eq .Environment "prd"}}<span class="badge badge-prd">{{.Environment }}</span>{{end}}
                  {{if eq .Environment "ppr"}}<span class="badge badge-ppr">{{.Environment }}</span>{{end}}
                  {{if eq .Environment "edu"}}<span class="badge badge-edu">{{.Environment }}</span>{{end}}
                  {{if eq .Environment "qa2"}}<span class="badge badge-qa2">{{.Environment }}</span>{{end}}
                  {{if eq .Environment "qa"}}<span class="badge badge-qa">{{.Environment }}</span>{{end}}
                  {{if eq .Environment "dev2"}}<span class="badge badge-dev2">{{.Environment }}</span>{{end}}
                  {{if eq .Environment "dev"}}<span class="badge badge-dev">{{.Environment }}</span>{{end}}
                  </td>
                  <td><a href="/hosts/{{.ID}}" class="mb-0 text-primary">{{.Hostname}}</a></td>
                  <td class="text-center"><label {{if .Status}}class="badge badge-success"{{end}} style="font-size: 14px;">{{.IP}}</label></td>
                  <td>{{formatDate .Created}}</td>
                  <td>{{formatDate .Updated}}</td>
                </tr>
                {{end}}
              </tbody>
            </table>

          </div>
        </div>
      </div>
      {{end}}

    </div>

  </div> 
</div>
{{end}}